{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "donorbro",
  "version": "0.1.0",
  "identifier": "com.donorbro.ai",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
   
    "windows": [
     {
      "label": "main",
      "title": "DonorBro",
      "width": 800,
      "height": 600,
      "visible": false,  
      "resizable": true,
      "fullscreen": false
    },
    {
      "label": "splash",
      "title": "Welcome",
      "url": "splash.html",
      "width": 450,
      "height": 450,
      "decorations": false,
      "center": true,
      "resizable": false,
      "visible": true  
    }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
